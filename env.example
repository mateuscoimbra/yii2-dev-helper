# ===================
# BANCO DE DADOS MYSQL
# ===================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=meubanco
DB_USERNAME=admin
DB_PASSWORD=admin
DB_CHARSET=utf8mb4

# ===================
# APLICAÇÃO
# ===================
APP_NAME=MeuApp
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# ===================
# SERVIÇOS EXTERNOS
# ===================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=meu@email.com
MAIL_PASSWORD=senha_do_email

# ===================
# CONFIGURAÇÕES DO CHATGPT
# ===================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# ===================
# NOVAS CONFIGURAÇÕES DE CUSTOS
# ===================
OPENAI_COST_PER_1K_TOKENS=0.03
MANUAL_HOURS_PER_DOCUMENT=3
ANALYST_HOURLY_RATE=50

# ===================
# CONFIGURAÇÕES DO DASHBOARD
# ===================
DASHBOARD_REFRESH_INTERVAL=300000
DASHBOARD_CACHE_ENABLED=true
DASHBOARD_FEEDBACK_COLLECTION=true

# ===================
# CONFIGURAÇÕES DE BATCH PROCESSING
# ===================
BATCH_COST_PER_DOCUMENT=0.25
BATCH_TIME_PER_DOCUMENT_MINUTES=1.5
BATCH_PROCESSING_DELAY_SECONDS=2
BATCH_MAX_CONCURRENT_DOCS=5
BATCH_ENABLE_EMAIL_NOTIFICATIONS=true
BATCH_CLEANUP_TEMP_FILES=true